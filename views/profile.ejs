  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="flex justify-end">
        <a
          class="bg-red-500 rounded-md inline-block px3 py-2 text-sm mb-5"
          href="/logout"
          >logout</a
        >
      </div>
      <div class="flex item-start gap-3 mt-3">
        <div class="w-10 h-10  rounded-md overflow" >
          <img class="w-full h-full object-cover" src="/images//uploads/<%= user.profileepic %>" alt="">
        </div>
      <h1 class="text-3xl">Hello, <%= user.name %>ðŸ‘‹</h1>
      </div>
      <h2 class="mb-5">you can create a post. <a class="text-blue-500 text-sm" href="/profile/upload">edit profile pic</a></h2>
      <form action="/post" method="post" class="">
        <textarea
          name="content"
          placeholder="what is in your mind ?"
          class="p-3 block mb-2 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md"
        ></textarea>
        <input
          type="submit"
          class="px-4 py-2 rounded-full font-medium block bg-zinc-200 text-black w-20"
          value=" post"
        />
      </form>
      <h3 class="text-zinc-300 mt-5 space-y-4">Your Posts</h3>
      <% user.posts.reverse().forEach(function(post) { %>
      <!-- <div class="posts mt-20">   
                <div class="postcontainer mt-5">
                    <div class="post w-1/3 mb-4 p-3 rounded-md border-[1px] bg-transparent border-zinc-700">
                    <h4 class="text-blue-500 mb-2">@some</h4>
                    <p class="tracking-tight text-sm">Lorem ipsum dolor sit amet consectetur adipisicing elit. Reprehenderit laudantium modi error sapiente, hic adipisci sint pariatur minima dicta, ex tempore nulla molestiae animi ipsam consequatur in placeat perferendis voluptatum?</p>    
                    <div class="btns gap-4 flex mt-5">
                        <a class="text-blue-400" href="">LIKE</a>
                        <a class="text-zinc-600" href="">edit</a>
                    </div>
                </div>
                </div>
            </div>  -->

      <div class="post w-1/3 p-3 rounded-md border border-zinc-700">
        <h4 class="text-blue-500 mb-2">@<%= user.username %></h4>
        <p class="tracking-tight text-sm"><%= post.content %></p>
        <!-- <p class="text-xs text-zinc-400">
          Uploaded on <%= new Date(post.date).toLocaleString("en-US", { hour:
          "numeric", minute: "numeric", hour12: true, day: "numeric", month:
          "short", year: "numeric" }) %>
        </p> -->
        <small class="mt-4 inline-block"><%= post.likes.length %> Likes</small>
        <div class="btns gap-4 flex mt-2">
          <a class="text-blue-400" href="/like/<%= post._id %>">
            <%= post.likes.indexOf(user._id) == -1 ? "  Like" : "Unlike" %>
          </a>
          <a class="text-zinc-600" href="/edit/<%= post._id %>">edit</a>
          <a class="text-red-600 px-75" href="/delete/<%= post._id %>">delete</a>
        </div>
      </div>

      <% }) %>
    </div>
  </body>
</html>
